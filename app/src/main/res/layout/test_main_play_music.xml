<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".activity.TestPlayMusicActivity">
    <!--toolbar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/accent_blue"
        android:orientation="horizontal">
        <!--imageview cho back-->
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/baseline_chevron_left"></ImageView>
        <!--imageview cho dowload-->
        <ImageView
            android:id="@+id/btn_dowload"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/downloads">

        </ImageView>

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="50dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="8dp">

        <TextView
            android:id="@+id/title_song"
            android:layout_width="273dp"
            android:layout_height="88dp"
            android:layout_marginLeft="80dp"
            android:textSize="50dp">

        </TextView>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="100dp"
            android:src="@drawable/music_cd_svgrepo_com"
            android:id="@+id/image_disk">
        </ImageView>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="400dp"
            android:src="@drawable/forward_button">

        </ImageView>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="400dp"
            android:src="@drawable/rewindbutton">

        </ImageView>

        <ImageView
            android:id="@+id/play_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="390dp"
            android:src="@drawable/playbuttonmusic">

        </ImageView>

        <ImageView
            android:id="@+id/pause_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="230dp"
            android:layout_marginTop="390dp"
            android:src="@drawable/baseline_pause">

        </ImageView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="500dp"
        card_view:cardBackgroundColor="@color/accent_blue"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="8dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/heart">

        </ImageView>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/playlist">

        </ImageView>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/shuffle">

        </ImageView>
    </androidx.cardview.widget.CardView>
</RelativeLayout>