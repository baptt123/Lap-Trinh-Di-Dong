<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.MainActivity">
    <!--header-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relative_header"
        android:background="@color/sky_blue">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:src="@drawable/arrow"
            android:layout_marginTop="10dp">

        </ImageView>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/search_music"
            android:layout_toRightOf="@id/back"
            android:text="Tìm kiếm nhạc"
            android:layout_marginLeft="15dp">

        </EditText>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icon_search"
            android:src="@drawable/search_interface_symbol"
            android:layout_toRightOf="@id/search_music"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp">

        </ImageView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/usericon"
            android:layout_toEndOf="@id/icon_search"
            android:src="@drawable/user"
            android:layout_marginTop="5dp">

        </ImageView>
    </RelativeLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="80dp"
    android:orientation="vertical">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Bài hát mới"
    android:textSize="30dp">

</TextView>
    <!--slider-->
<com.denzcoskun.imageslider.ImageSlider
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:id="@+id/slider"
    app:iss_auto_cycle="true"
    app:iss_delay="1000"
    app:iss_period="1000"
    app:iss_text_align="center"/>

</LinearLayout>
    <!--fragment area-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:id="@+id/fragement_playicon">

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu" />

