<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".rating.RatingActivity"
        android:background="@color/sky_blue">
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/title_rating"
              android:text="@string/rating_board"
              android:textSize="20sp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintHorizontal_bias="0.452" app:layout_constraintVertical_bias="0.062">
    </TextView>
    <Button android:id="@+id/btn_arrange"
            android:text="@string/arranged" android:layout_height="50dp"
            android:layout_width="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.455"
            app:layout_constraintVertical_bias="0.133">
    </Button>
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/back"
               android:src="@drawable/baseline_arrow_back_24"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.139"
               app:layout_constraintVertical_bias="0.062">

    </ImageView>
    <ListView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/list_view_rating" tools:layout_editor_absoluteY="172dp"
              tools:layout_editor_absoluteX="0dp">

    </ListView>
</androidx.constraintlayout.widget.ConstraintLayout>